<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">
        <Button
                android:onClick="generateArrOnClick"
                android:text="@string/generate_arr"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="28dp"/>
        <Button
                android:text="@string/file_input"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="28dp" app:layout_constraintStart_toEndOf="@+id/button"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <Button
                android:onClick="generateSortedArr"
                android:text="@string/sort"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewGenerated"
        />
        <Button
                android:onClick="plot"
                android:text="@string/plot"
                android:layout_width="329dp"
                android:layout_height="48dp"
                android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSorted"/>
        <TextView
                android:layout_width="326dp"
                android:layout_height="1dp"
                android:textIsSelectable="true"
                android:scrollbars="horizontal|vertical"
                android:id="@+id/textViewGenerated" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:fontFamily="serif"/>
        <TextView
                android:layout_width="326dp"
                android:layout_height="1dp"
                android:textIsSelectable="true"
                android:scrollbars="horizontal|vertical"
                android:id="@+id/textViewSorted" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:fontFamily="serif"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>